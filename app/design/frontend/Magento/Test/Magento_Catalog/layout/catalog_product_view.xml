<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
     <body>
         <referenceContainer name="content">
            <container name="product.info.third.col" htmlTag="div" htmlClass="third-container" before="-"></container>
        </referenceContainer>

        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View" name="test.tab1" template="Magento_Catalog::details.phtml" group="detailed_info" >
                <arguments>
                <argument translate="true" name="title" xsi:type="string">DETAILS</argument>
                </arguments>
            </block>
        </referenceBlock>
        
   
<referenceContainer name="sidebar.additional">
    <block class="Magento\Framework\View\Element\Template" name="sidebar_sticky" template="Magento_Catalog::product/view/sidebar_sticky.phtml" after="-" />
</referenceContainer>

        <referenceBlock name="breadcrumbs" remove="1"/>
        <referenceBlock name="header.panel" remove="true"/>
        <move element="product.info.details" destination="content" before="product.info.media"/>
        <move element="product.info.main" destination="content" after="product.info.media"/>     
    </body>
</page>